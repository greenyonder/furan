<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF"
    >
    <!-- Include Action Bar -->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActionBarCompat" >
          <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:paddingLeft="15dip"
        android:scaleType="center"
       android:background="@null"
        android:src="@drawable/furlogob" 
          android:clickable="true" android:onClick="onClick"
          android:tag="back"
        />

          <falcofinder.android.fuehrerschein.TextProgressBar
              android:id="@+id/pbar"
           
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               android:max="30"
	        android:progress="0"
	        android:progressDrawable="@drawable/progressdrawable"
	        style="?android:attr/progressBarStyleHorizontal"
	        android:maxHeight="20dip"
	        android:minHeight="20dip" 
	        android:layout_gravity="center_vertical"
	        android:layout_alignParentRight="true"
              android:visibility="invisible"
              />
          
	</RelativeLayout>
	
    	
    	 
	   <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
     
        android:text="@string/toptext"
        android:textColor="#000000"
        
         />  

	    <TextView
        android:id="@+id/kat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
     
        android:text=""
        android:textColor="#000000"
        
         />
	    
    	    <Button
        android:id="@+id/gotoforum"
        android:layout_width="130dp"
        android:layout_height="23dp"
       
       android:tag="gotoforum"
        android:gravity="right"
   		android:background="@drawable/selectorbtnyellow"
   		         android:clickable="true"
         android:onClick="onClick" 
        />
    	
    	   
    	  
    	    
    	     <ScrollView android:id="@+id/scroll"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    ><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF"
    >
    	   <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:src="@drawable/patcenter" />
    	       				    
	

		           <RelativeLayout 
		 android:id="@+id/relativeLayoutFrage"		               
		           android:layout_width="fill_parent"
		        android:layout_height="wrap_content" 
		        
		          android:visibility="invisible"
		         >
		     
   <CheckBox
		        android:id="@+id/button1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true" android:onClick="onClick"
		   		       android:button="@drawable/selectorbtnv"
		   		       android:textColor="#000000"
		         />
		    

     
		   

<View
		      android:id="@+id/view1"
			android:layout_height="1dp"		
			 android:layout_width="1dp"
			         android:background="#FFFFFF" 
			     android:layout_below="@+id/button1"
			         />
   
          		<CheckBox
		        android:id="@+id/button2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		      
		        android:clickable="true" android:onClick="onClick"
		     android:layout_below="@+id/view1"
		     		       android:button="@drawable/selectorbtnv"
		     		        android:textColor="#000000"
		         />
          		    
          		     
		 
		    <View
		      android:id="@+id/view2"
			android:layout_height="1dp"		
			 android:layout_width="1dp"
			         android:background="#FFFFFF" 
			     android:layout_below="@+id/button2"
			         />
		            <CheckBox
		        android:id="@+id/button3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		       
		        android:clickable="true" android:onClick="onClick"
		       android:layout_below="@+id/view2" 
		       android:button="@drawable/selectorbtnv"
		        android:textColor="#000000"
		         />
   
   
		         
		     </RelativeLayout>
		
		 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:id="@+id/linearLayoutButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
   
    android:layout_gravity="center"
        
     >
   
   <Button
		        android:id="@+id/buttongo"
		         android:layout_width="100dp"
			      android:layout_height="40dp"
		       
		        android:textStyle="bold"
		       
		        android:background="@drawable/selectorbtnstart"
		        android:clickable="true" android:onClick="onClick"
		         />
     <View
		      android:id="@+id/viewspace"
			android:layout_height="wrap_content"		
			 android:layout_width="4dp"
			         android:background="#FFFFFF" 

			         />   
			         
			         <Button
         android:id="@+id/btnfehler"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:drawableLeft="@drawable/fehler"
           android:background="@null"
         android:clickable="true"
         android:onClick="onClick"
         android:tag="btnfehler"
        android:text="@string/btnerroritxt"
          />
			              
			         
			       
   </LinearLayout>

    
     
		 
      <View
		      android:id="@+id/viewspace"
			android:layout_height="2dp"		
			 android:layout_width="fill_parent"
			         android:background="#FFFFFF" 

			         />   
			         
         </LinearLayout>
      
      </ScrollView>
   
</LinearLayout>


       
