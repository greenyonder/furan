<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="#008800" />
            <stroke
                android:width="1dp"
                android:color="#000000" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
	            android:top="1dp"              
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00FF00"
                android:endColor="#99FF99"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00FF00" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="1dp"
	            android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>